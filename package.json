{
  "name": "@mollie/api-client",
  "version": "2.1.0",
  "license": "BSD-3-Clause",
  "description": "Official Mollie API client for Node",
  "repository": {
    "type": "git",
    "url": "https://github.com/mollie/mollie-api-node"
  },
  "keywords": [
    "mollie",
    "payment",
    "service",
    "provider",
    "api",
    "client",
    "payments",
    "gateway"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "engines": {
    "node": ">=4.8"
  },
  "scripts": {
    "prepublish": "yarn run build",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "prepush": "yarn test",
    "test": "yarn run build && jest",
    "test:watch": "yarn run build && jest --watch",
    "test:cov": "yarn run build && jest --coverage",
    "test:unit:cov": "jest ./tests/unit --coverage",
    "build": "rollup -c",
    "lint:prettier": "prettier --write \"{src,tests,examples}/**/*.ts\"",
    "lint:tslint": "tslint --config .tslintrc.json {src,test,examples}/**/*.ts",
    "lint": "yarn run lint:tslint && yarn run lint:prettier"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "lodash": "^4.17.4",
    "qs": "^6.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.117",
    "@types/qs": "^6.5.1",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^6.1.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "rollup": "^0.66.6",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "rollup-plugin-url": "^2.0.1",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.6"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --config .tslintrc.json",
      "prettier --write",
      "git add"
    ],
    "examples/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)$": "ts-jest",
      "^.+\\.pem$": "<rootDir>/tests/unit/__stubs__/fileTransformer.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.(ts|tsx)"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
