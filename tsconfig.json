{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "esnext",
    "declaration": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@errors/*": ["src/errors/*"],
      "@models/*": ["src/models/*"],
      "@resources/*": ["src/resources/*"],
      "@mollie-types/*": ["src/types/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "src/",
    "tests/"
  ]
}
